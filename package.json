{
    "name": "codeviz-ts",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "bin": {
        "codeviz": "ts/dist/cli/index.js"
    },
    "scripts": {
        "build": "tsc -p ts/tsconfig.json && vite build --config ts/viewer/vite.config.ts",
        "build:cli": "tsc -p ts/tsconfig.json",
        "up": "npm run build && node ts/dist/cli/index.js view open \"$@\"",
        "dev": "sh -c 'vite build --config ts/viewer/vite.config.ts --watch & tsx watch ts/src/cli/index.ts view open --kill-existing --no-browser \"$@\"' --",
        "codeviz": "node ts/dist/cli/index.js",
        "view": "node ts/dist/cli/index.js view open \"$@\"",
        "preextract": "npm run build:cli",
        "extract": "node ts/dist/cli/index.js extract python \"$@\"",
        "extract:demo": "node ts/dist/cli/index.js extract python --config ./configs/demo_codebase.codeviz.toml",
        "preannotate": "npm run build:cli",
        "annotate": "node ts/dist/cli/index.js annotate",
        "dev:view": "vite --config ts/viewer/vite.config.ts",
        "dev:cli": "tsx ts/src/cli/index.ts",
        "start": "node ts/dist/cli/index.js",
        "pretest": "npm run build:cli",
        "test": "tsx ts/tests/commands.node.test.ts && tsx ts/tests/tags.node.test.ts && tsx ts/tests/annotate.server.test.ts",
        "test:ui": "playwright test --ui --config ts/playwright.config.ts",
        "test:playwright": "playwright test --config ts/playwright.config.ts"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^2.0.15",
        "@fastify/static": "^7.0.4",
        "@floating-ui/dom": "^1.6.11",
        "@phosphor-icons/web": "^2.1.1",
        "@types/cytoscape-cxtmenu": "^3.4.4",
        "@types/prismjs": "1.26.5",
        "ai": "^5.0.40",
        "chalk": "^5.6.2",
        "clipanion": "4.0.0-rc.3",
        "cytoscape": "^3.31.0",
        "cytoscape-cxtmenu": "^3.5.0",
        "cytoscape-elk": "^2.1.0",
        "cytoscape-expand-collapse": "^4.1.0",
        "cytoscape-fcose": "^2.2.0",
        "dompurify": "^3.1.6",
        "dotenv": "^16.4.5",
        "elkjs": "^0.9.3",
        "fastify": "^4.27.2",
        "marked": "^14.1.1",
        "minimatch": "^9.0.5",
        "nunjucks": "^3.2.4",
        "open": "^10.1.0",
        "prismjs": "1.30.0",
        "toml": "^3.0.0",
        "tree-sitter": "^0.25.0",
        "tree-sitter-python": "^0.25.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@types/node": "^24.3.1",
        "@types/nunjucks": "^3.2.6",
        "tsx": "^4.19.0",
        "typescript": "^5.6.2",
        "vite": "^5.4.7"
    },
    "engines": {
        "node": ">=20 <23"
    }
}